[user]
    name = Phil Hagelberg
    email = phil@hagelb.org
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[push]
    default = tracking
[diff "clojure"]
	xfuncname = (^\\(.*|\\s*\\(defn.*)
[alias]
    shorten = "!sh -c 'curl -i http://git.io -F url=$1' -"
    git = clone
    clown = clone
    sta = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
    stu = "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"
[heroku]
	remote = heroku
[core]
	attributesfile = /home/phil/.gitattributes
[credential]
	helper = /usr/share/doc/git/contrib/credential/netrc/git-credential-netrc
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = phil@hagelb.org
    smtpserverport = 587
